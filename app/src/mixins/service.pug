mixin service(title)

    article.flex.flex-wrap.justify-center.gap-y-8(
        class="md:basis-1/2 lg:basis-1/3 lg:items-start"
    ) 
        
        .p-2.bg-blue-500.text-gray-50(
            class="basis-16 lg:basis-1/5"
        )
            if block 
                block 
            else 
                p.text-500 No icon to display here

        
        .flex.flex-col.items-center.gap-y-4(
            class="lg:gap-y-2 lg:basis-4/5"
        ) 
            
            .text-xl.capitalize.self-start.px-2 #{title} 
            
