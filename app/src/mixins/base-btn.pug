mixin baseBtn(href, extraClasses=null, element="link")
    
     case element

        when 'button'
            button.uppercase.tracking-wide.py-2.px-3.bg-blue-400(
                class=`border-2 border-solid border-transparent cursor-pointer transition duration-200 ease-in hover:text-blue-200 hover:bg-blue-900 ${extraClasses}`,
            )&attributes(attributes)  
                block

        
        when 'link'

            a.uppercase.tracking-wide.py-2.px-3.bg-blue-400(
                class=`border-2 border-solid border-transparent cursor-pointer transition duration-200 ease-in hover:text-blue-200 hover:bg-blue-900 ${extraClasses}`,
                href=href
            )&attributes(attributes)
                block
        
        